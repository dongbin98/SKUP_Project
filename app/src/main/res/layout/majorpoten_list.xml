<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/tableframe">

    <TextView
        android:id="@+id/majorpotenPro"
        android:text="프로그램명"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/majorpotenDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="신청기간"
        app:layout_constraintTop_toBottomOf="@id/majorpotenPro"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/majorpotenPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="신청인원/총인원"
        app:layout_constraintTop_toBottomOf="@+id/majorpotenDate"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/majorpotenRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="강의실"
        app:layout_constraintTop_toBottomOf="@id/majorpotenPeople"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>