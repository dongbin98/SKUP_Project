<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homeforegroundColor">

        <TextView
            android:id="@+id/main_home_major_notice_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="학과 공지사항 제목 예시"
            android:textColor="@color/onlyWhite"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:gravity="center"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/home_card_design2"/>

        <TextView
            android:id="@+id/main_home_major_notice_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="학과 공지사항 내용 예시"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:gravity="center"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/home_card_design3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>