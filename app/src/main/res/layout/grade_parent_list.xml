<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tableframe">

    <TextView
        android:id="@+id/yearterm"
        android:textColor="@color/black"
        android:textSize="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/totCredit"
        android:textColor="@color/black"
        android:textSize="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/yearterm"/>

    <TextView
        android:id="@+id/totGrade"
        android:textColor="@color/black"
        android:textSize="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/totCredit"/>

    <TextView
        android:id="@+id/totRank"
        android:textColor="@color/black"
        android:textSize="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/totGrade"/>

</RelativeLayout>